{% extends "admin/layout.html.twig" %}


{% block nom_page %}

    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title"> Categories</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>

                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}


{% block body %}
    <div class="container-fluid">
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button  " type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Ajouter une categorie
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="card">
                            <form class="form-horizontal"  method="POST" action="" enctype="multipart/form-data">
                                {{ form_start(form) }}
                                <div class="card-body">

                                    <div class="form-group row">
                                        <label
                                                for="fname"
                                                class="col-sm-3 text-end control-label col-form-label"
                                        >{{ form_label(form.Nom) }} Categorie </label
                                        >
                                        <div class="col-sm-9">
                                           <!-- <input
                                                    type="text"
                                                    class="form-control"
                                                    id="fname"
                                                    name="Nomcat"
                                                    placeholder=""
                                            />
                                            -->


                                            {{ form_widget(form.Nom) }}
                                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                                            {{ form_end(form) }}

                                        </div>
                                    </div>




                                    </div>
                                <div class="border-top">
                                    <div class="card-body">

                                    </div>
                                </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Liste des Categories</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped dataTable text-sm">
                    <thead>
                    <tr>
                        <th>Num√©ro</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for categorie in liste %}
                    <tr>
                        <!-- ici on met le foreach-->


                        <td> {{ categorie.id }}</td>
                        <td> {{ categorie.nom }}</td>
                        <td>
                            <button
                                    type="button"
                                    class="btn btn-cyan btn-sm text-white"
                            >
                                Modifier
                            </button>

                            <button
                                    type="button"
                                    class="btn btn-danger btn-sm text-white"
                            >
                                Supprimer
                            </button>
                        </td>

                    </tr>
                    {% endfor %}
                    <!-- ici on met le end foreach-->

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>


    </div>
{% endblock %}



